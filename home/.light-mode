#!/bin/bash
# Begin
notify-send -u critical "set openbox and gtk themes adapted with icon on obconf and lxappearance"
obconf
lxappearance

# Kill
killall clipit
killall polybar
killall dunst

# Load X Resources
xrdb ~/.Xresources-light

# Background Handler
cp ~/.config/nitrogen/light.cfg ~/.config/nitrogen/bg-saved.cfg
nitrogen --restore

# Panel/Taskbar
polybar light -r &
clipit &

# Notification
dunst -conf ~/.config/dunst/light &

# Betterlockscreen
betterlockscreen -u ~/Pictures/Wallpaper/T-Progressive/Girl-gradient.jpg &

# Success
notify-send "Light Theme Applied"
